@model EmployeeAPP2.Models.LoginViewModel
@{
    ViewBag.Title = "Admin Login";
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow-lg rounded-4">
                <div class="card-header text-center bg-primary text-white rounded-top-4">
                    <h3>@ViewBag.Title</h3>
                </div>
                <div class="card-body p-4">
                    @* Show login error alert if any *@
                    @if (TempData["LoginError"] != null)
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            @TempData["LoginError"]
                            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                        </div>
                    }

                    @using (Html.BeginForm("Login", "Account", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Email)
                            @Html.TextBoxFor(m => m.Email, new { @class = "form-control", @placeholder = "Enter username" })
                            @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger" })
                        </div>

                        <div class="form-group mb-3">
                            @Html.LabelFor(m => m.Password)
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", @placeholder = "Enter password" })
                            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })
                        </div>

                        <button type="submit" class="btn btn-primary w-100">Login</button>
                    }

                    <div class="mt-4 text-center">
                        <p>
                            Don't have an account?
                            @Html.ActionLink("Sign up here", "Register", "Account", null, new { @class = "text-decoration-none" })
                        </p>
                    </div>

                </div>
            </div>
        </div>
    </div>
</div>


